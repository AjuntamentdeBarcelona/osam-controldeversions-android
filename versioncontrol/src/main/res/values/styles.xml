<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="VersionControlCustomAlertDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <!-- color text of title -->
        <item name="android:textColor">@color/colorVersionText</item>
        <!-- color text of description -->
        <item name="android:textColorPrimary">@color/colorVersionText</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:borderlessButtonStyle">@style/ButtonBorderlessDialog</item>
    </style>

    <style name="ButtonBorderlessDialog" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <!-- color text button -->
        <item name="android:textColor">@color/colorVersionAccent</item>
    </style>

    <!-- for AppCompact V4 -->
    <style name="VersionControlCustomAlertDialogV4" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- color text of title and description-->
        <item name="android:textColorPrimary">@color/colorVersionText</item>
        <!-- color text button -->
        <item name="colorAccent">@color/colorVersionAccent</item>
        <!-- background Alert -->
        <item name="android:background">@color/colorVersionBackground</item>
    </style>

    <style name="GDPRAcceptButton">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="GDPR">
        <item name="android:background">#FFFFFF</item>
    </style>

</resources>
